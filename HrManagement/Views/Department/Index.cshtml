@model IEnumerable<HrManagement.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Department List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Dep_Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Dep_Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Dep_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {


    <Script>
        @if (TempData["success"] != null)
        {
            @:toastr.success("@TempData["success"]")
        }
    </Script>

                  }